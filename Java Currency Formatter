import java.util.Scanner;
import java.text.NumberFormat;
import java.util.Locale;

public class Solution {
    
    public static void main(String[] args) {
        // LANGUAGE-i JAVA 8-ə DEYİSHİB RUN EDİN
        // STDIN(Standard Input)(Keyboard)-dan verilenleri(input) almaq uchun scanner class-in-dan "scanner" adli instansiya(instance) yaradiriq
        Scanner scanner = new Scanner(System.in);

        // double novunden olan "payment" adli deyisheni yaradir ve onu STDIN-den verilen qiymete beraber edirik ki bunun uchun yuxarıda yaratdıghımız "scanner" instansiyasından nextDouble() metodu istifade olunur
        double payment = scanner.nextDouble();
        scanner.close();

        // Hindistan uchun xususi Locale yaradırık chunki digerlerinden ferqli olaraq Hindistanın hazır(built-in) Locale-si yoxdur
        Locale indiaLocale = new Locale("en", "IN");

        // Locale-ler-dən istifadə ederek her bir olke uchun NumberFormat-lari yaradir
        NumberFormat us     = NumberFormat.getCurrencyInstance(Locale.US);
        NumberFormat india  = NumberFormat.getCurrencyInstance(indiaLocale);
        NumberFormat china  = NumberFormat.getCurrencyInstance(Locale.CHINA);
        NumberFormat france = NumberFormat.getCurrencyInstance(Locale.FRANCE);

        // Elde etdiyimiz qiymətleri ekrana verir
        System.out.println("US: "     + us.format(payment));
        System.out.println("India: "  + india.format(payment));
        System.out.println("China: "  + china.format(payment));
        System.out.println("France: " + france.format(payment));

        // Yaratdıghımız scanner adli instansiyani baghlayir
        scanner.close();
    }
}
